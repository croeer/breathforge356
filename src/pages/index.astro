<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="BreathForge356 - Breathing training app using the 356 method" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>BreathForge356 - Breathing Training</title>
  </head>
  <body>
    <div class="app-container">
      <header class="header">
        <h1 class="title">BreathForge356</h1>
        <p class="subtitle">3 sessions per day ‚Ä¢ 6 breaths per minute ‚Ä¢ 5 minutes per session</p>
      </header>

      <main class="main-content">
        <div class="session-info">
          <div class="info-card">
            <div class="info-icon">üìä</div>
            <div class="info-content">
              <h3>Sessions Today</h3>
              <p class="info-value" id="session-count">0 / 3</p>
            </div>
          </div>
          <div class="info-card">
            <div class="info-icon">‚è∞</div>
            <div class="info-content">
              <h3>Next Reminder</h3>
              <p class="info-value" id="next-reminder">--:--</p>
            </div>
          </div>
        </div>

        <BreathingAnimation />

        <div class="session-history">
          <h2>Today's Sessions</h2>
          <div id="session-list" class="session-list">
            <p class="empty-state">No sessions completed today</p>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>

<script>
  import { 
    getTodaySessions, 
    addSession, 
    completeSession, 
    getSessionCountToday,
    canStartNewSession 
  } from '../lib/sessionTracker';
  import { 
    getReminderSettings, 
    requestNotificationPermission,
    showReminderNotification,
    checkReminderTime 
  } from '../lib/reminders';

  // Request notification permission on load
  if (typeof window !== 'undefined') {
    requestNotificationPermission().then(() => {
      // Check if it's time for a reminder
      if (checkReminderTime()) {
        showReminderNotification();
      }
    });

    // Set up periodic reminder checks (every minute)
    setInterval(() => {
      if (checkReminderTime()) {
        showReminderNotification();
      }
    }, 60000);
  }

  function updateUI() {
    const sessions = getTodaySessions();
    const completedSessions = sessions.filter(s => s.completed);
    const sessionCount = completedSessions.length;

    // Update session count
    const sessionCountEl = document.getElementById('session-count');
    if (sessionCountEl) {
      sessionCountEl.textContent = `${sessionCount} / 3`;
    }

    // Update next reminder time
    const reminderEl = document.getElementById('next-reminder');
    if (reminderEl) {
      const settings = getReminderSettings();
      const now = new Date();
      const currentHour = now.getHours();
      const currentMinute = now.getMinutes();
      
      let nextReminder = settings.times.find(time => {
        const [hour, minute] = time.split(':').map(Number);
        const reminderTime = new Date();
        reminderTime.setHours(hour, minute, 0, 0);
        return reminderTime > now;
      });

      if (!nextReminder) {
        // If no reminder today, show first one tomorrow
        nextReminder = settings.times[0];
      }

      reminderEl.textContent = nextReminder;
    }

    // Update session list
    const sessionListEl = document.getElementById('session-list');
    if (sessionListEl) {
      if (completedSessions.length === 0) {
        sessionListEl.innerHTML = '<p class="empty-state">No sessions completed today</p>';
      } else {
        sessionListEl.innerHTML = completedSessions
          .map(session => {
            const startTime = new Date(session.startTime);
            const timeStr = startTime.toLocaleTimeString('en-US', { 
              hour: '2-digit', 
              minute: '2-digit' 
            });
            return `
              <div class="session-item">
                <div class="session-time">${timeStr}</div>
                <div class="session-status">‚úì Completed</div>
              </div>
            `;
          })
          .join('');
      }
    }
  }

  let currentSession: any = null;

  // Set up start callback
  if (typeof window !== 'undefined') {
    (window as any).onBreathingStart = (sessionId: string) => {
      currentSession = {
        id: sessionId,
        date: new Date().toISOString().split('T')[0],
        startTime: new Date().toISOString(),
        completed: false
      };
      addSession(currentSession);
      updateUI();
    };

    // Set up completion callback
    (window as any).onBreathingComplete = (sessionId: string) => {
      if (currentSession && currentSession.id === sessionId) {
        completeSession(sessionId);
        currentSession = null;
        updateUI();
      }
    };

    // Initial UI update
    updateUI();

    // Update UI every minute
    setInterval(updateUI, 60000);
  }
</script>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --primary-blue: #4a90e2;
    --dark-blue: #357abd;
    --darker-blue: #2a5f8f;
    --light-blue: #6ba3e8;
    --lighter-blue: #e8f4fd;
    --text-dark: #1a3a5a;
    --text-light: #5a7a9a;
    --white: #ffffff;
    --shadow: rgba(74, 144, 226, 0.2);
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #e8f4fd 0%, #d0e8f5 50%, #b8dcf0 100%);
    min-height: 100vh;
    color: var(--text-dark);
    line-height: 1.6;
  }

  .app-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }

  .title {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--dark-blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 10px var(--shadow);
  }

  .subtitle {
    font-size: 1.1rem;
    color: var(--text-light);
    font-weight: 500;
  }

  .main-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .session-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .info-card {
    background: var(--white);
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: 0 4px 20px var(--shadow);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .info-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px var(--shadow);
  }

  .info-icon {
    font-size: 2.5rem;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--lighter-blue) 0%, #d0e8f5 100%);
    border-radius: 12px;
  }

  .info-content h3 {
    font-size: 0.9rem;
    color: var(--text-light);
    font-weight: 500;
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .info-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-blue);
  }

  .session-history {
    background: var(--white);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px var(--shadow);
  }

  .session-history h2 {
    font-size: 1.5rem;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .session-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .session-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--lighter-blue);
    border-radius: 12px;
    border-left: 4px solid var(--primary-blue);
  }

  .session-time {
    font-weight: 600;
    color: var(--text-dark);
    font-size: 1.1rem;
  }

  .session-status {
    color: var(--primary-blue);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .empty-state {
    text-align: center;
    color: var(--text-light);
    padding: 2rem;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 0.9rem;
    }

    .session-info {
      grid-template-columns: 1fr;
    }

    .app-container {
      padding: 1rem;
    }
  }
</style>

